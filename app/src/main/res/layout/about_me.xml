<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/head_show"
            android:layout_marginTop="35dp"
            app:civ_border_width="1dp"
            app:civ_border_color="#666666"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <TextView
            android:text="gaolonglong"
            android:textSize="22sp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="weibo：http://weibo.com/hlgao1935"
            android:layout_margin="12dp"
            android:padding="8dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="GitHub：https://github.com/gaolonglong"
            android:layout_margin="12dp"
            android:padding="8dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="项目地址：\nhttps://github.com/gaolonglong/GankGirl"
            android:layout_margin="12dp"
            android:padding="8dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/go_gankgirl"
            android:background="@drawable/button_bg"
            android:text="去下载App"
            android:layout_margin="12dp"
            android:padding="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/go_github"
            android:background="@drawable/button_bg"
            android:text="去看源码"
            android:layout_margin="12dp"
            android:padding="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>